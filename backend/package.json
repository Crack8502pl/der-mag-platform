{
  "name": "der-mag-platform-backend",
  "version": "1.0.0",
  "description": "Backend API dla Cr@ck Platform - system zarzÄ…dzania zadaniami infrastrukturalnymi",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "build": "tsc && cp -r public dist/ && cp -r scripts dist/",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "migrate:all": "bash scripts/run-all-migrations.sh",
    "migrate:tokens": "psql ${DB_CONNECTION_STRING:-postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}} -f scripts/migrations/20251116_add_refresh_tokens.sql",
    "migrate:materials": "ts-node scripts/migrate-materials.ts",
    "seed:materials": "ts-node scripts/seed-material-stocks.ts",
    "db:setup": "ts-node scripts/setup-database.ts",
    "db:reset": "bash scripts/db-reset.sh",
    "db:drop": "sudo -u postgres psql -c 'DROP DATABASE IF EXISTS ${DB_NAME:-dermag_platform}'",
    "db:create": "sudo -u postgres psql -c 'CREATE DATABASE ${DB_NAME:-dermag_platform}' && sudo -u postgres psql -c 'GRANT ALL PRIVILEGES ON DATABASE ${DB_NAME:-dermag_platform} TO ${DB_USER:-dermag_user}'",
    "db:backup": "bash scripts/backup-db.sh",
    "db:restore": "bash scripts/restore-db.sh",
    "db:setup-cron": "bash scripts/setup-backup-cron.sh",
    "env:init": "dotenv-vault new",
    "env:push": "dotenv-vault push",
    "env:pull": "dotenv-vault pull",
    "env:build": "dotenv-vault build",
    "env:keys": "dotenv-vault keys",
    "audit:production": "npm audit --production",
    "generate-certs": "./scripts/generate-certs.sh",
    "generate-certs:win": "powershell -ExecutionPolicy Bypass -File ./scripts/generate-certs.ps1"
  },
  "overrides": {
    "lodash": "^4.17.21",
    "@oclif/plugin-warn-if-update-available": {
      "lodash.template": "npm:lodash@^4.17.21"
    },
    "braces": "^3.0.3",
    "tar": "^7.5.3",
    "diff": "^8.0.3",
    "fast-xml-parser": "^5.3.4"
  },
  "keywords": [
    "der-mag",
    "task-management",
    "infrastructure",
    "api"
  ],
  "author": "Cr@ck",
  "license": "MIT",
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "csv-stringify": "^6.6.0",
    "docxtemplater": "^3.50.0",
    "dotenv": "^16.3.1",
    "dotenv-vault": "^1.18.0",
    "exceljs": "^4.4.0",
    "exifr": "^7.1.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "pdf-lib": "^1.17.1",
    "pg": "^8.11.3",
    "pizzip": "^3.1.7",
    "reflect-metadata": "^0.2.1",
    "sharp": "^0.33.1",
    "typeorm": "^0.3.19",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "webdav-server": "^2.6.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bull": "^4.10.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.17.0",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.21",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2"
  }
}
